body
  width 100%
  height 100%
  font-family sans-serif
  display block
  margin 0
  padding 0

  .body
    padding 35px 40px 30px 40px
    background #f5f5f5

    #header
      display block
      font-size 20px
      margin-bottom 32px

    email-editor
      display block
      width 420px

  .buttons
    background white
    margin 30px 40px 40px 40px
    button
      margin-right 15px
      &:last-child
        margin-right 0

button.primary-btn
  display inline-block
  padding 0 10px 0 10px
  min-width 100px
  min-height 30px
  color white
  border none
  background #6699ff
