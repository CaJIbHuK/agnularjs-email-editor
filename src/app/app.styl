@font-face
  font-family MyriadPro
  font-style normal
  src url(vendor/fonts/MyriadPro-Regular.otf)

body
  width 100%
  height 100%
  font-family MyriadPro
  //font-family: 'PT Sans', sans-serif;
  display block
  margin 0
  padding 0

  .body
    padding 33px 40px 30px 40px
    background #f5f5f5

    #header
      display block
      font-size 20px
      margin-bottom 32px

    email-editor
      display block
      width 420px

  .buttons
    background white
    margin 30px 40px 40px 40px
    button
      margin-right 15px
      &:last-child
        margin-right 0

button
  &.btn
    font-size MyriadPro
    display inline-block
    padding 0 10px 0 10px
    min-width 100px
    min-height 30px
    border none

    &.primary-btn
      color white
      background #6699ff
