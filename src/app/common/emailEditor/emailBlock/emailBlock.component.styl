email-block
  display inline-flex
  margin 5px
  background #d8e7fe
  white-space nowrap
  max-width 90%
  padding 4px 8px 4px 8px
  border-radius 100px
  font-size 14px

  &.invalid
    border-bottom dotted
    border-bottom-color red
    border-radius 0
    background white
  span
    text-overflow ellipsis
    overflow hidden
    max-width 100%
    &.delete-email-btn
      overflow inherit
      font-style normal
      cursor pointer
      margin-left 5px
